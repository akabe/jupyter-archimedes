opam-version: "2.0"
synopsis: "A Jupyter-friendly 2D plotting library based on Archimedes"
description: "This package added a Jupyter backend for Archimedes, a 2D plotting library written in OCaml. You can plot and embed figures on Jupyter."
maintainer: [
  "Akinori ABE <aabe.65535@gmail.com>"
]
authors: [
  "Akinori ABE"
]
license: "MIT"
homepage: "https://akabe.github.io/jupyter-archimedes/"
bug-reports: "https://github.com/akabe/jupyter-archimedes/issues"
dev-repo: "git+https://github.com/akabe/jupyter-archimedes.git"

build: [
  [ "dune" "subst" ] {pinned}
  [ "dune" "build" "-p" name "-j" jobs ]
]
depends: [
  "ocaml" {>= "4.04.0"}
  "dune" {>= "1.0.0"}
  "jupyter"
  "cairo2" {>= "0.6"}
  "archimedes"
  "ocp-indent" {with-test & >= "1.7.0"}
]
